            <string>// Attack 0: Earthquake Slam
// Attack 1: Headbutt
depth = -y;
if(obj_combat.combo == 0) //Move Freely
{
    if(tooCloseObject.touchingplayer == 1 and attackType != 3) //Too Close
    {
        attackType = -1;
        path_end();
        image_speed = 0;
        image_index = 0;
        tcSwitch = 0;
    }
    if(attackType == -1) //Too Close Attack
    {
        if(image_index &lt;= 3)
        {
            image_speed = 0.1;
        }
        else
        {
            image_speed = 0.2;
        }
        var xdist = abs(obj_combatplayer.phy_position_x - phy_position_x);
        var xd = obj_combatplayer.phy_position_x - phy_position_x;
        var ydist = abs(obj_combatplayer.phy_position_y - phy_position_y);
        var yd = obj_combatplayer.phy_position_y - phy_position_y;
        if(xdist &gt;= ydist &amp;&amp; xd &gt;= 0) //Right
        {
            sprite_index = spr_dr1rightstrike;
            direction = 0;
        }
        else if(ydist &gt; xdist &amp;&amp; yd &gt;= 0) //Down
        {
            sprite_index = spr_dr1downstrike;
            direction = 270;
        }
        else if(xdist &gt;= ydist &amp;&amp; xd &lt;= 0) //Left
        {
            sprite_index = spr_dr1leftstrike;
            direction = 180;
            if(image_index &gt;= 3 and tcSwitch == 0)
            {
                instance_create(x - 30, y, obj_leftupdownslice)
                tcSwitch = 1;
            }
            else if(image_index &gt;= 4 and tcSwitch == 1)
            {
                attackType = 0;
                image_index = 0;
            }
        }
        else
        {
            sprite_index = spr_dr1upstrike;
            direction = 90;
        }
    }
    else if(attackType == 0) //New Attack
    {
        var ran = random(1);
        if(ran &lt;= attack1Prob)
        {
            attackType = 1;
        }
        else
        {
            attackType = 2;
            instance_create(0, 0, headbuttObject);
            headbuttObject.enemy = self;
        }
    }
    else if(attackType == 1) //Slam
    {
        attackType = 2;
        instance_create(0, 0, headbuttObject);
        headbuttObject.enemy = self;
    }
    else if(attackType == 2) // Roam
    {
        var headbutt = obj_dr1Headbutt.touchingPlayer;
        if(timer == 10) //End of current path
        {
            mx = (obj_combatplayer.x div 32) * 32 + 16;
            my = ((obj_combatplayer.y + 4) div 32) * 32 + 16;
            if(mp_grid_path(global.grid, path, x, y, mx, my, false))
            {
                path_start(path, .75, path_action_stop, false);
            }
            timer = 0;
        }
        else
        {
            timer += 1;
        }
        var d = direction;
        if(d &gt; 315 &amp;&amp; d &lt; 360 || d &gt;= 0 &amp;&amp; d &lt; 45)
        {
            sprite_index = spr_dr1right;
            dir = 0;
        }
        else if(d &gt;= 45 &amp;&amp; d &lt;= 135)
        {
            sprite_index = spr_dr1up;
            dir = 90;
        }
        else if(d &gt; 135 &amp;&amp; d &lt; 225)
        {
            sprite_index = spr_dr1left;
            dir = 180;
        }
        else
        {
            sprite_index = spr_dr1down;
            dir = 270;
        }
        image_speed = 0.1;
        if(headbutt == 1)
        {
            headbuttTimer += 1;
            if(headbuttTimer &gt;= headbuttTimerMax)
            {
                var headbuttRandom = random(1);
                if(headbuttRandom &lt;= headbuttProbability)
                {
                    attackType = 3;
                    with(headbuttObject){instance_destroy();}
                    path_end();
                }
                else
                {
                    headbuttTimer = 0;
                }
            }
        }
        else
        {
            headbuttTimer = 0;
        }
    }
    else if(attackType == 3) //Headbutt
    {
        image_speed = headbuttImageSpeed;   
        if(dir == 0)
        {
            sprite_index = spr_dr1rightheadbutt;
            phy_position_x += headbuttSpeed;
        }
        else if(dir == 90)
        {
            sprite_index = spr_dr1upheadbutt;
            phy_position_y -= headbuttSpeed;
        }
        else if(dir == 180)
        {
            sprite_index = spr_dr1leftheadbutt;
            phy_position_x -= headbuttSpeed;
        }
        else
        {
            sprite_index = spr_dr1downheadbutt;
            phy_position_y += headbuttSpeed;
        }
    }
    else if(attackType == 4) //Wait
    {
        image_speed = 0;
        image_index = 0;
        
        if(dir == 0){sprite_index = spr_dr1rightheadbutt;}
        else if(dir == 90){sprite_index = spr_dr1upheadbutt;}
        else if(dir == 180){sprite_index = spr_dr1leftheadbutt;}
        else{sprite_index = spr_dr1downheadbutt;}
        
        headbuttWaitTime -= 1;
        if(headbuttWaitTime == 0)
        {
            headbuttWaitTime = headbuttWait;
            attackType = 0;
        }
    }
    stamina -= staminaloss;
    if(stamina &lt;= 0)
    {
        stamina = 0;
    }
}
